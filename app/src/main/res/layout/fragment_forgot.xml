<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wishit.Pages.ForgotFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnSendForgot"
            android:layout_width="230dp"
            android:layout_height="0dp"
            android:layout_marginStart="96dp"
            android:layout_marginBottom="466dp"
            android:backgroundTint="#22BE73"
            android:text="Send"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmailForgot" />

        <EditText
            android:id="@+id/etEmailForgot"
            android:layout_width="245dp"
            android:layout_height="0dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="20dp"
            android:background="#E3E3E3"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toTopOf="@+id/btnSendForgot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnBackSignup"
            android:layout_width="70dp"
            android:layout_height="47dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/arrow_back"
            android:tint="#555555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>